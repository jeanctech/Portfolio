<style>

  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  body {
    display: flex;
    flex-direction: row;
    justify-content: baseline;
    align-items: baseline;
  }
  #div-experience {
    display: flex;
    flex-direction: column;
    justify-content: baseline;
    align-items: baseline;
  }
  #div-jobs {
    margin: 0.5rem;
    padding: 0.5rem;
    display: flex;
    flex-direction: row;
    justify-content: baseline;
    align-items: center;
  }
  #div-projects {
    display: flex;
    flex-direction: column;
    justify-content: baseline;
    align-items: baseline;
  }
  #div-ul {
    display: flex;
    flex-direction: column;
    justify-content: baseline;
    align-items: baseline;
  }
  #div-container {
    border: #333 solid 0.1rem;
    display: flex;
    flex-direction: row;
    justify-content: baseline;
    align-items: baseline;
  }
  #li {
    margin: 0.2rem;
    border: #333 solid 0.1rem;
    border-top: none;
    border-bottom: none;
    border-left: none;
    border-right: none;
  }
  #small {
    margin: 0.2rem;
    padding: 0.5rem;
    border: #5e5858 solid 0.1rem;
    border-top: none;
    border-bottom: none;
    border-left: none;
  }
  #div-p {
    display: flex;
    flex-direction: column;
    justify-content: baseline;
    align-items: baseline;
  }
  #div-text {
    margin: 0.5rem;
    padding: 0.5rem;
    border: #333 solid 0.1rem;
    border-radius: 0.5rem;
    display: flex;
    flex-direction: column;
    justify-content: baseline;
    align-items: baseline;
  }

</style>
